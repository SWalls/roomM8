<!-- Importance factors ratings w/sliders -->
<%
    var isEmail = typeof message !== "undefined";
    var showSlider = function(rating) {
%>
        <div class="col-xs-4" style="padding: 0;"><%- rating == 1 ? '&#10004;' : '' %></div>
        <div class="col-xs-4 text-center" style="padding: 0;"><%- rating == 2 ? '&#10004;' : '' %></div>
        <div class="col-xs-4 text-right" style="padding: 0;"><%- rating == 3 ? '&#10004;' : '' %></div>
<%
    }
%>
<div class="form-group row titles">
    <label class="col-xs-4 col-form-label"></label>
    <div class="col-xs-7" style="font-size: 0.9em; padding: 0;">
        <div class="col-xs-4" style="padding: 0;"><%= isEmail ? '1' : '(not very)' %></div>
        <div class="col-xs-4 text-center" style="padding: 0;"><%= isEmail ? '2' : '(somewhat)' %></div>
        <div class="col-xs-4 text-right" style="padding: 0;"><%= isEmail ? '3' : '(very)' %></div>
    </div>
</div>
<div class="form-group row no-place">
    <div class="col-xs-4 text-right">
        <a href="javascript:;" data-toggle="tooltip" data-placement="auto top" title="How important is it that you live in one of the preferred locations you listed?"><span class="glyphicon glyphicon-question-sign"></span></a>
        Location
    </div>
    <div class="col-xs-7">
        <% 
        if(isEmail) {
            showSlider(user.factors.location || 1);
        } else { 
        %>
        <input id="important-location" name="factorLocation" type="text" class="slider"
        data-slider-value="<%= (isUserRegistered && user.factors.location) ? user.factors.location : '1' %>" />
        <% } %>
    </div>
</div>
