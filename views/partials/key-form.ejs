<!-- views/partials/key-form.ejs -->
<!-- Keyphrase -->
<fieldset id="f0" class="initial-signup">
    <div id="code-stuff" style="<%= (allowedAccess) ? 'display: none;' : '' %>">
        <h3 class="text-center col-sm-8">Step 1</h3>
        <p class="text-center col-sm-8 text-muted">Already have an account? You can skip this step.</p>
        <div class="form-group row">
            <div class="col-sm-8" style="margin: auto; float: none;">
                <div class="input-group">
                    <input type="text" class="form-control form-control-lg" id="secretKey" name="key" placeholder="Enter secret code" required />
                    <span class="input-group-btn">
                        <button class="btn btn-primary btn-lg" type="button" id="btn-check-code"><span class="glyphicon glyphicon-arrow-right"></span></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <h3 class="text-center col-sm-8 step2"><%= (allowedAccess) ? 'Please sign in to continue' : 'Step 2' %></h3>
    <div class="form-group row">
        <div class="col-sm-8" style="margin: auto; float: none;">
            <a href="/auth/google">
                <div class="input-group google-logo">
                    <span class="form-control form-control-lg"></span>
                    <span class="input-group-btn">
                        <button class="btn btn-primary btn-lg" type="button">Sign in with Google</button>
                    </span>
                </div>
            </a>
        </div>
    </div>
</fieldset>