<!-- views/partials/message-form.ejs -->
<!-- Send message -->
<fieldset id="fieldsetMessage">
    <input type="hidden" id="recipientID" name="id" required />
    <input type="hidden" id="recipientName" name="id" required />
    <div class="form-group">
        <label for="msgSubject" class="col-form-label">Subject</label>
        <input type="text" class="form-control" id="messageSubject" name="subject" data-default="Potential Noogler Roommate?" placeholder="Enter subject" required />
    </div>
    <div class="form-group">
        <label for="messageContent" class="col-form-label">Message</label>
        <div style="margin-bottom: 5px;">
            <small id="messageContentHelp" class="form-text text-muted">Your <a href="javascript:;" data-toggle="tooltip" data-placement="auto top" title="Your email, name, start date/location/position, preferences, bio, etc. will be shared. This does not include your age, or gender.">public roomM8 profile info</a> will be automatically included after your message.</small>
        </div>
        <textarea class="form-control" id="messageContent" name="message" required rows="4" maxlength="1000" 
        style="resize: none;" placeholder="Enter message" aria-describedby="messageContentHelp"></textarea>
    </div>
    <div class="form-group">
        <div>
            <label>
                <input type="checkbox" class="regRequired" name="agree1" value="yes" /> 
                I confirm the content of this message does not violate my NDA with Google. <a href="javascript:;" data-toggle="tooltip" data-placement="auto top" title="Make sure you haven't said anything you're not supposed to."><span class="glyphicon glyphicon-question-sign"></span></a>
            </label>
        </div>
        <div>
            <label>
                <input type="checkbox" class="regRequired" name="agree2" value="yes" /> 
                I understand that I am about to give <span class="recipientName">this user</span> my email and other info. <a href="javascript:;" data-toggle="tooltip" data-placement="auto top" title="Your email, name, start date/location/position, preferences, bio, etc. will be shared. This does not include your age, or gender."><span class="glyphicon glyphicon-question-sign"></span></a>
            </label>
        </div>
    </div>
</fieldset>